<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siwiec.gocarts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.siwiec.gocarts.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.siwiec.gocarts.activities.RegisterActivity" />
        <activity android:name="com.siwiec.gocarts.activities.UserAreaActivity"></activity>
        <activity android:name="com.siwiec.gocarts.activities.ShowAllOrdersActivity"></activity>
        <activity android:name="com.siwiec.gocarts.activities.ShowSingleRecordActivity"></activity>
        <activity android:name="com.siwiec.gocarts.Pop" android:theme="@style/AppTheme.PopTheme"></activity>
    </application>

</manifest>
