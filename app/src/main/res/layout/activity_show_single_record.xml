<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_single_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gocart"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.siwiec.gocarts.activities.ShowSingleRecordActivity">

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:background="@color/orange"
        android:text="Edytuj ten rekord"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@color/orange"
        android:text="UsuÅ„ ten rekord"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:text="Cena"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTrack"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/tvPrice"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@color/orange"
        android:text="Rodzaj toru"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="208dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/tvTrack"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="@color/orange"
        android:text="Czas trwania"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvDuration"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:background="@color/orange"
        android:text="Data"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvParticipants"
        android:layout_width="209dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/tvDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="-1dp"
        android:background="@color/orange"
        android:text="Uczestnicy"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_alignTop="@+id/tvDate"
        android:text="Data:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_alignBottom="@+id/tvDuration"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="5dp"
        android:text="Czas trwania"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_alignTop="@+id/tvParticipants"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:text="Uczestnicy"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_alignTop="@+id/tvTrack"
        android:text="Rodzaj toru:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>